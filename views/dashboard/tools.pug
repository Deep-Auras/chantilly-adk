extends ../layouts/dashboard

block content
  .mb-6
    h2.text-xl.font-semibold Tools Registry
    p.text-gray-600.text-sm Manage and configure custom tools

  //- Tools Summary Cards
  .grid.grid-cols-1.gap-4.mb-6(class="md:grid-cols-3")
    .bg-white.rounded-lg.shadow.p-4
      .text-gray-500.text-sm Total Tools
      .text-2xl.font-bold= tools.length

    .bg-white.rounded-lg.shadow.p-4
      .text-gray-500.text-sm Enabled
      .text-2xl.font-bold.text-green-600= tools.filter(t => t.enabled).length

    .bg-white.rounded-lg.shadow.p-4
      .text-gray-500.text-sm Disabled
      .text-2xl.font-bold.text-gray-600= tools.filter(t => !t.enabled).length

  //- Tools Table
  .bg-white.rounded-lg.shadow.overflow-hidden
    table.min-w-full.divide-y.divide-gray-200
      thead.bg-gray-50
        tr
          th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
            | Tool Name
          th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
            | Category
          th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
            | Priority
          th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
            | Status
          th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider
            | Description

      tbody.bg-white.divide-y.divide-gray-200
        each tool in tools
          tr
            td.px-6.py-4.whitespace-nowrap
              .font-medium.text-gray-900= tool.name

            td.px-6.py-4.whitespace-nowrap
              span.px-2.py-1.text-xs.rounded.bg-blue-100.text-blue-800= tool.category || 'general'

            td.px-6.py-4.whitespace-nowrap
              span.text-sm.text-gray-900= tool.priority

            td.px-6.py-4.whitespace-nowrap
              if tool.enabled
                span.px-2.py-1.text-xs.rounded.bg-green-100.text-green-800 Enabled
              else
                span.px-2.py-1.text-xs.rounded.bg-gray-100.text-gray-800 Disabled

            td.px-6.py-4
              .text-sm.text-gray-600= tool.description
